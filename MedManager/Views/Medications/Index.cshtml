@model IList<Medication>

@{
    ViewData["Title"] = "Medication Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Add">Create New Medication</a>
</p>

@if (Model.Count == 0)
{
    <p>No Medications Yet!</p>

} else
{


}

<table class="table">
    <thead>
        <tr>
                <th>
                    Medication
                </th>
                <th>
                    Dosage
                </th>
                <th>
                    Notes
                </th>
                <th>
                    Times Taken / Day
                </th>
                <th>
                    # of Doses / Bottle
                </th>
                <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dosage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimesXDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefillRate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p><a asp-controller="Medications" asp-action="Remove">Remove Medications</a></p>
